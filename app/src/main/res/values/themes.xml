<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lifetime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryDark">@color/indigo_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray_200</item>
        <item name="colorSurface">@color/gray_500</item>
    </style>

    <style name="Theme.Lifetime.FullScreenDialog.Light" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryDark">@color/indigo_900</item>
        <item name="colorSecondary">@color/indigo_500</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/gray_200</item>
        <item name="actionMenuTextColor">@color/gray_200</item>
    </style>

    <style name="Theme.Lifetime.FullScreenDialog.Night" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/black_light</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorSecondary">@color/indigo_500</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/black_light</item>
    </style>

    <style name="Lifetime.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Lifetime" />

    <style name="Theme.Lifetime.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Lifetime.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Lifetime.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>